// Variables and scoping example

let x: int = 10;
print x;

// Block scope
{
    let y: int = 5;
    print y;
    
    let x: int = 20;  // Shadows outer x
    print x;
};

print x;  // Prints original x

// Using variables in expressions
let a: int = 1;
let b: int = 2;
let c: int = 3;

let result = a + b * c;
print result;
